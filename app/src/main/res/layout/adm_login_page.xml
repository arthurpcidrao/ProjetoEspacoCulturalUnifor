<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/branco_unifor"
    tools:context=".AdmLoginPage" >

    <!-- Barra Superior -->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/azul_unifor"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageButton
            android:id="@+id/returnButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/return_arrow" />

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="match_parent"
            android:gravity="center" >

            <ImageView
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/logo" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/optionsButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/options" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Barra Inferior -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/azul_unifor"
        android:layout_alignParentBottom="true" >

        <!-- Layout para botões -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <!-- Botão Home -->
            <ImageButton
                android:id="@+id/homeButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/home" />

            <Space
                android:layout_width="70dp"
                android:layout_height="match_parent" />

            <!-- Botão Bússola -->
            <ImageButton
                android:id="@+id/compassButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/compass" />

            <Space
                android:layout_width="70dp"
                android:layout_height="match_parent" />

            <!-- Botão QR -->
            <ImageButton
                android:id="@+id/qrButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/qr" />

            <Space
                android:layout_width="70dp"
                android:layout_height="match_parent" />

            <!-- Botão Configurações -->
            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <ImageButton
                    android:id="@+id/settingsButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/settings" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:src="@drawable/selected"
                    android:layout_gravity="bottom" />
            </LinearLayout>

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/configLayout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="100dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/folito_medium"
            android:textSize="24sp"
            android:text="Entrar como Administrador" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <EditText
            android:id="@+id/login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Login"
            android:textSize="16sp"
            android:fontFamily="@font/folito_light"
            android:background="@drawable/rounded_corners"
            android:padding="10dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Senha"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:fontFamily="@font/folito_light"
            android:background="@drawable/rounded_corners"
            android:padding="10dp" />

        <TextView
            android:id="@+id/showPasswordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostrar Senha"
            android:textColor="@color/gray"
            android:clickable="true"
            android:onClick="onTextViewClicked" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@drawable/button_rounded"
            android:text="Acessar"
            android:textColor="@color/branco_unifor" />

    </LinearLayout>
</RelativeLayout>