<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context=".HomePage" >

    <!-- Barra Superior -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/azul_unifor">

        <!-- Layout para ícones futuros -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Logo Unifor -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/teste_logo_saloes"/>
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <!-- Barra Inferior -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/azul_unifor"
        android:layout_alignParentBottom="true">

        <!-- Layout para botões -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <!-- Botão Home -->
            <ImageButton
                android:id="@+id/homeButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/home" />

            <Space
                android:layout_width="70dp"
                android:layout_height="match_parent" />

            <!-- Botão Bússola -->
            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center">

                <ImageButton
                    android:id="@+id/compassButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/compass" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:src="@drawable/selected"
                    android:layout_gravity="bottom" />
            </LinearLayout>

            <Space
                android:layout_width="70dp"
                android:layout_height="match_parent" />

            <!-- Botão QR -->
            <ImageButton
                android:id="@+id/qrButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/qr" />

            <Space
                android:layout_width="70dp"
                android:layout_height="match_parent" />

            <!-- Botão Configurações -->
            <ImageButton
                android:id="@+id/settingsButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/settings" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/configLayout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:layout_marginTop="50dp" >


        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/button_rounded"
                android:textColor="@color/branco_unifor"
                android:fontFamily="sans-serif-thin"
                android:textSize="16sp"
                android:text="Salão 1" />

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/button_rounded"
                android:textColor="@color/branco_unifor"
                android:fontFamily="sans-serif-thin"
                android:textSize="16sp"
                android:text="Salão 2" />

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/button_rounded"
                android:textColor="@color/branco_unifor"
                android:fontFamily="sans-serif-thin"
                android:textSize="16sp"
                android:text="Salão 3" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/button_rounded"
                android:textColor="@color/branco_unifor"
                android:fontFamily="sans-serif-thin"
                android:textSize="16sp"
                android:text="Salão 4" />

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/button_rounded"
                android:textColor="@color/branco_unifor"
                android:fontFamily="sans-serif-thin"
                android:textSize="16sp"
                android:text="Salão 6" />

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/button_rounded"
                android:textColor="@color/branco_unifor"
                android:fontFamily="sans-serif-thin"
                android:textSize="16sp"
                android:text="Salão 6" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/button_rounded"
                android:textColor="@color/branco_unifor"
                android:fontFamily="sans-serif-thin"
                android:textSize="16sp"
                android:text="Salão 7" />

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/button_rounded"
                android:textColor="@color/branco_unifor"
                android:fontFamily="sans-serif-thin"
                android:textSize="16sp"
                android:text="Salão 8" />

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/button_rounded"
                android:textColor="@color/branco_unifor"
                android:fontFamily="sans-serif-thin"
                android:textSize="16sp"
                android:text="Salão 9" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>